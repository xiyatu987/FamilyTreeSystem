@model IEnumerable<FamilyTreeSystem.Models.FamilyRule>

@{ ViewData["Title"] = "祖训列表"; }

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-amber-800 mb-6">祖训列表</h1>

    <div class="mb-6">
        <a asp-action="Create" class="px-4 py-2 bg-amber-600 text-white rounded-lg hover:bg-amber-700 font-medium transition-colors duration-300">添加新祖训</a>
    </div>

    <div class="bg-white/90 backdrop-blur-sm rounded-xl shadow-xl overflow-hidden border border-amber-100">
        <table class="min-w-full divide-y divide-amber-200">
            <thead class="bg-amber-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-amber-600 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-amber-600 uppercase tracking-wider">标题</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-amber-600 uppercase tracking-wider">创建日期</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-amber-600 uppercase tracking-wider">创建者</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-amber-600 uppercase tracking-wider">创建时间</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-amber-600 uppercase tracking-wider">操作</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-amber-100">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-amber-50 transition-colors duration-200">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-amber-800">@item.Id</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-amber-800">@item.Title</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-amber-800">@(item.CreatedDate?.ToString("yyyy-MM-dd"))</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-amber-800">@item.Creator</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-amber-800">@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right space-x-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="px-3 py-1 bg-amber-100 text-amber-800 rounded hover:bg-amber-200 font-medium">查看详情</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="px-3 py-1 bg-amber-400 text-white rounded hover:bg-amber-500 font-medium">编辑</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="px-3 py-1 bg-amber-700 text-white rounded hover:bg-amber-800 font-medium">删除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
