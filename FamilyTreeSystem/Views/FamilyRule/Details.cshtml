@model FamilyTreeSystem.Models.FamilyRule

@{ ViewData["Title"] = "祖训详情"; }

<h1 class="text-2xl font-bold text-amber-800 mb-6">祖训详情</h1>

<div class="bg-white/90 backdrop-blur-sm rounded-xl shadow-xl p-6 border border-amber-100 max-w-7xl mx-auto">
    <h4 class="text-xl font-semibold text-amber-800 mb-4">@Model.Title</h4>
    <hr class="border-amber-200 mb-6" />
    <dl class="grid grid-cols-1 gap-4 sm:grid-cols-6">
        <dt class="sm:col-span-2 font-medium text-amber-700">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="sm:col-span-4 text-area-display">
            @Html.Raw(Model.Content)
        </dd>
        <dt class="sm:col-span-2 font-medium text-amber-700">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="sm:col-span-4 text-amber-800">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="sm:col-span-2 font-medium text-amber-700">
            @Html.DisplayNameFor(model => model.Creator)
        </dt>
        <dd class="sm:col-span-4 text-amber-800">
            @Html.DisplayFor(model => model.Creator)
        </dd>

    </dl>
</div>
<div class="mt-6 flex justify-center space-x-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="px-5 py-3 bg-amber-600 text-white rounded-lg hover:bg-amber-700 transition-colors duration-300 font-medium shadow-md">编辑</a>
    <a asp-action="Index" class="px-5 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors duration-300 font-medium shadow-md">返回列表</a>
</div>

<style>
    .text-area-display {
        white-space: pre-wrap;
        word-break: break-word;
    }
</style>
