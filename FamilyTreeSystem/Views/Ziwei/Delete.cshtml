@model FamilyTreeSystem.Models.Ziwei

@{ ViewData["Title"] = "删除字辈"; }

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-amber-900">删除字辈</h1>
        <a asp-action="Index" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-5 py-3 rounded-lg font-medium transition-colors">
            返回列表
        </a>
    </div>

    <div class="bg-amber-50 border-l-4 border-amber-400 p-4 mb-6 rounded-lg">
        <p class="text-amber-700 mb-2">您确定要删除 <strong>@Model.ZiweiChar</strong> 这个字辈吗？</p>
        <p class="text-amber-700">此操作将永久删除该字辈记录，无法撤销！</p>
    </div>

    <div class="bg-white/90 backdrop-blur-sm rounded-xl shadow-xl border border-amber-100 p-6 max-w-2xl">
        <h4 class="text-xl font-semibold text-amber-800 mb-4">字辈信息</h4>
        <div class="border-t border-amber-100 pt-4">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-amber-600">ZiweiChar</dt>
                    <dd class="mt-1 text-sm text-amber-800">@Html.DisplayFor(model => model.ZiweiChar)</dd>
                </div>
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-amber-600">所属世代</dt>
                    <dd class="mt-1 text-sm text-amber-800">@Html.DisplayFor(model => model.Generation)</dd>
                </div>
            </div>
            
            <div class="mt-6">
                <dt class="text-sm font-medium text-amber-600">描述</dt>
                <dd class="mt-1 text-sm text-amber-800">@Html.DisplayFor(model => model.Description)</dd>
            </div>
        </div>
        
        <div class="flex justify-end gap-3 pt-6 border-t border-amber-100">
            <a asp-action="Index" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-5 py-3 rounded-lg font-medium transition-colors">
                取消
            </a>
            <form asp-action="Delete" class="inline">
                <input type="hidden" asp-for="ZiweiId" />
                <input type="submit" value="删除" class="bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-medium transition-colors shadow-lg" />
            </form>
        </div>
    </div>
</div>
