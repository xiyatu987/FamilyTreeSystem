@model IEnumerable<FamilyTreeSystem.Models.FamilyMember>

@{ ViewData["Title"] = "家族成员列表"; }

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="hero-title text-3xl font-bold text-amber-900">家族成员列表</h1>
        <a asp-action="Create" class="bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-lg font-medium transition-colors shadow-lg">
            添加新成员
        </a>
    </div>

    <!-- 搜索表单 -->
    <form asp-action="Index" method="get" class="mb-8 bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl p-6">
        <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
            <div class="flex items-center gap-4">
                <div class="flex-1 max-w-md">
                    <div class="relative">
                        <input type="text" id="searchText" name="searchText" 
                               class="w-full pl-10 pr-4 py-2 border border-amber-200 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-all duration-300 focus:scale-102"
                               placeholder="搜索家族成员..." />
                        <svg class="absolute left-3 top-2.5 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </div>
                </div>
                <div class="flex items-center gap-2">
                    <input type="checkbox" id="showAll" name="showAll" value="true" 
                           @(ViewBag.ShowAll == true ? "checked" : "") 
                           class="h-4 w-4 text-amber-600 border-gray-300 rounded focus:ring-amber-500" />
                    <label for="showAll" class="text-sm font-medium text-gray-700">显示全部人员（含配偶）</label>
                </div>
            </div>
            <div class="flex space-x-3">
                <button type="submit" class="bg-amber-600 hover:bg-amber-700 text-white px-6 py-2 rounded-lg font-medium transition-colors shadow-lg">
                    搜索
                </button>
                <a asp-action="Index" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-2 rounded-lg font-medium transition-colors shadow-md">
                    重置
                </a>
            </div>
        </div>
    </form>

    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl overflow-hidden">
        <table class="w-full">
            <thead class="bg-amber-50">
                <tr>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-amber-800 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-amber-800 uppercase tracking-wider">姓名</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-amber-800 uppercase tracking-wider">性别</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-amber-800 uppercase tracking-wider">世代</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-amber-800 uppercase tracking-wider">字辈</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-amber-800 uppercase tracking-wider">父亲</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-amber-800 uppercase tracking-wider">母亲</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-amber-800 uppercase tracking-wider">配偶</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-amber-800 uppercase tracking-wider">操作</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr class="member-card hover:bg-amber-50 transition-all duration-300">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@item.Id</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-amber-900">@item.FullName</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.GenderDisplay</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.Generation</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@(item.Ziwei?.ZiweiChar ?? "未指定")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@(item.Father != null ? item.Father.FullName : "未指定")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@(item.Mother != null ? item.Mother.FullName : "未指定")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@(item.Spouse != null ? item.Spouse.FullName : "未指定")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <div class="flex space-x-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="px-3 py-1 bg-amber-100 hover:bg-amber-200 text-amber-800 rounded-md text-sm font-medium transition-colors">查看详情</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="px-3 py-1 bg-amber-600 hover:bg-amber-700 text-white rounded-md text-sm font-medium transition-colors">编辑</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="px-3 py-1 bg-red-600 hover:bg-red-700 text-white rounded-md text-sm font-medium transition-colors">删除</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
