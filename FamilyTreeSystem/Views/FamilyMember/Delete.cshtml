@model FamilyTreeSystem.Models.FamilyMember

@{ ViewData["Title"] = "确认删除"; }

<h1 class="text-2xl font-bold text-amber-800 mb-6">确认删除</h1>

<div class="bg-amber-50 border-l-4 border-amber-400 p-4 mb-6 rounded-lg">
    <p class="text-amber-700 mb-2">您确定要删除 <strong>@Model.FullName</strong> 吗？</p>
    <p class="text-amber-700">此操作将永久删除该成员记录，无法撤销！</p>
</div>

<div class="bg-white/90 backdrop-blur-sm rounded-xl shadow-xl border border-amber-100 p-6 max-w-2xl">
    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        
        <div class="grid grid-cols-1 sm:grid-cols-6 gap-4 mb-4">
            <label class="sm:col-span-2 text-sm font-medium text-amber-700 pt-2">ID</label>
            <div class="sm:col-span-4">
                <input type="text" value="@Model.Id" class="w-full px-4 py-2 border border-amber-200 rounded-lg bg-gray-50 text-gray-500 cursor-not-allowed" readonly />
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-6 gap-4 mb-4">
            <label class="sm:col-span-2 text-sm font-medium text-amber-700 pt-2">姓名</label>
            <div class="sm:col-span-4">
                <input type="text" value="@Model.FullName" class="w-full px-4 py-2 border border-amber-200 rounded-lg bg-gray-50 text-gray-500 cursor-not-allowed" readonly />
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-6 gap-4 mb-6">
            <label class="sm:col-span-2 text-sm font-medium text-amber-700 pt-2">性别</label>
            <div class="sm:col-span-4">
                <input type="text" value="@Model.GenderDisplay" class="w-full px-4 py-2 border border-amber-200 rounded-lg bg-gray-50 text-gray-500 cursor-not-allowed" readonly />
            </div>
        </div>

        <div class="flex justify-end space-x-3">
            <button type="submit" class="px-6 py-3 bg-amber-600 text-white rounded-lg hover:bg-amber-700 transition-colors duration-300 shadow-md">确认删除</button>
            <a asp-action="Index" class="px-6 py-3 bg-amber-100 text-amber-700 rounded-lg hover:bg-amber-200 transition-colors duration-300 shadow-md">取消</a>
        </div>
    </form>
</div>
