    function setZoom(zoom) {
        currentZoom = zoom;
        var treeContainer = document.querySelector('.family-tree');
        treeContainer.style.transform = `scale(${currentZoom})`;
        treeContainer.style.transformOrigin = 'top center';
        
        // æ›´æ–°ç¼©æ”¾æ»‘å—å’Œæ˜¾ç¤ºå€¼
        document.getElementById('zoomSlider').value = currentZoom;
