            scrollX: 0, // ç¡®ä¿ä»æœ€å·¦ä¾§å¼€å§‹æ•è·
            scrollY: 0  // ç¡®ä¿ä»æœ€é¡¶éƒ¨å¼€å§‹æ•è·
        }).then(canvas => {
            const imgData = canvas.toDataURL('image/png');
            
            // è®¡ç®—å›¾ç‰‡åœ¨PDFä¸­çš„å°ºå¯¸
            const pdfWidth = 280;
