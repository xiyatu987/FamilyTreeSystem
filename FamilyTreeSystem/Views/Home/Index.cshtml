    // æœç´¢åŠŸèƒ½
    function searchFamilyMember(query) {
        if (!query.trim()) {
            renderFamilyTree();
            return;
        }
        
        // ç®€å•çš„æœç´¢å®ç°ï¼Œä»…ä½œä¸ºç¤ºä¾‹
        var container = document.querySelector('.family-tree');
        container.innerHTML = '';
        
        // è¿‡æ»¤å¹¶é«˜äº®åŒ¹é…çš„èŠ‚ç‚¹
        function filterAndHighlight(node) {
            var isMatch = node.name.toLowerCase().includes(query.toLowerCase());
            
            // é€’å½’æ£€æŸ¥å­èŠ‚ç‚¹
            var hasMatchingChild = false;
            if (node.children) {
                for (var i = 0; i < node.children.length; i++) {
                    if (filterAndHighlight(node.children[i])) {
                        hasMatchingChild = true;
                    }
                }
            }
            
            // å¦‚æœå½“å‰èŠ‚ç‚¹æˆ–å…¶å­èŠ‚ç‚¹åŒ¹é…ï¼Œåˆ™å±•å¼€è¯¥èŠ‚ç‚¹
            if (isMatch || hasMatchingChild) {
                nodeExpandedState[node.id] = true;
            }
            
            return isMatch || hasMatchingChild;
        }
        
        // è¿‡æ»¤åŒ¹é…çš„æ ¹èŠ‚ç‚¹
        var matchingRoots = familyTreeData.filter(root => filterAndHighlight(root));
        
        if (matchingRoots.length === 0) {
            container.innerHTML = '<div class="text-center text-muted">æœªæ‰¾åˆ°åŒ¹é…çš„å®¶æ—æˆå‘˜</div>';
            return;
        }
        
        // æ¸²æŸ“åŒ¹é…çš„èŠ‚ç‚¹
        matchingRoots.forEach(rootNode => {
            var nodeElement = renderNode(rootNode);
            container.appendChild(nodeElement);
        });
    }
    
