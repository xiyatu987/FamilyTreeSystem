        familyTreeContainer.offsetHeight;
        
        // ä½¿ç”¨html2canvaså°†å®¶æ—æ ‘è½¬æ¢ä¸ºcanvas
        html2canvas(familyTreeContainer, {
            scale: 2, // æé«˜åˆ†è¾¨ç‡
            useCORS: true,
            backgroundColor: '#fffaf0',
            logging: false,
            letterRendering: true,
