<script>
    // å®¶æ—æ ‘æ•°æ®
    var familyTreeData = @Html.Raw(ViewBag.FamilyTreeData);
    // å­˜å‚¨èŠ‚ç‚¹å±•å¼€/æŠ˜å çŠ¶æ€
    var nodeExpandedState = {};
    // å½“å‰ç¼©æ”¾çº§åˆ«
    var currentZoom = 1;
    
    // æ¸²æŸ“å®¶æ—æ ‘
    function renderFamilyTree() {
        var container = document.querySelector('.family-tree');
        
        // æ¸…ç©ºå®¹å™¨
        container.innerHTML = '';
        
        if (familyTreeData.length === 0) {
            container.innerHTML = '<div class="text-center text-muted">æš‚æ— å®¶æ—æˆå‘˜æ•°æ®</div>';
            return;
        }
        
        // æ¸²æŸ“æ¯ä¸ªæ ¹èŠ‚ç‚¹
        familyTreeData.forEach(rootNode => {
            var nodeElement = renderNode(rootNode);
            container.appendChild(nodeElement);
        });
    }
    
    // æ¸²æŸ“å•ä¸ªèŠ‚ç‚¹
    function renderNode(node) {
        var nodeContainer = document.createElement('div');
        nodeContainer.className = 'family-tree-node-container';
        nodeContainer.dataset.nodeId = node.id;
        
        // æ¸²æŸ“å½“å‰èŠ‚ç‚¹å’Œé…å¶
        var personContainer = document.createElement('div');
        personContainer.className = 'family-tree-node';
        
        // æ¸²æŸ“å½“å‰æˆå‘˜
        var personElement = createPersonElement(node);
        
        // æ·»åŠ æŠ˜å /å±•å¼€æŒ‰é’®
        if (node.children && node.children.length > 0) {
            var toggleButton = document.createElement('span');
            toggleButton.className = 'toggle-button inline-block mr-2 cursor-pointer text-amber-600';
            toggleButton.innerHTML = nodeExpandedState[node.id] ? 'â–¼' : 'â–¶';
            toggleButton.onclick = function(e) {
                e.stopPropagation();
                toggleNode(node.id);
            };
            personElement.insertBefore(toggleButton, personElement.firstChild);
        }
        
        personContainer.appendChild(personElement);
        
        // æ¸²æŸ“é…å¶
        if (node.spouse) {
            // æ·»åŠ å¤«å¦»è¿æ¥çº¿
            var connectionLine = document.createElement('div');
            connectionLine.className = 'family-tree-spouse-connection';
            connectionLine.innerHTML = '<div class="connection-line"></div>';
            personContainer.appendChild(connectionLine);
            
            // æ¸²æŸ“é…å¶
            var spouseElement = createPersonElement(node.spouse);
            spouseElement.className += ' family-tree-spouse';
            personContainer.appendChild(spouseElement);
        }
        
        nodeContainer.appendChild(personContainer);
        
        // æ¸²æŸ“å­å¥³
        if (node.children && node.children.length > 0) {
            var childrenContainer = document.createElement('div');
            childrenContainer.className = 'family-tree-children';
            
            // æ¸²æŸ“å­å¥³è¿æ¥çº¿
            var connectionElement = document.createElement('div');
            connectionElement.className = 'family-tree-connection';
            childrenContainer.appendChild(connectionElement);
            
            // å¦‚æœæœ‰å¤šä¸ªå­å¥³ï¼Œæ·»åŠ åˆ†æ”¯è¿æ¥çº¿
            if (node.children && node.children.length > 1) {
                var branchElement = document.createElement('div');
                branchElement.className = 'family-tree-children-branch';
                childrenContainer.appendChild(branchElement);
            }
            
            // æ¸²æŸ“å­å¥³èŠ‚ç‚¹
            var childrenLevel = document.createElement('div');
            childrenLevel.className = 'family-tree-level';
            childrenLevel.style.display = nodeExpandedState[node.id] ? 'flex' : 'none';
            
            node.children.forEach(child => {
                var childElement = renderNode(child);
                childrenLevel.appendChild(childElement);
            });
            
            childrenContainer.appendChild(childrenLevel);
            nodeContainer.appendChild(childrenContainer);
        }
        
        return nodeContainer;
    }
    
    // åˆ›å»ºæˆå‘˜å…ƒç´ 
    function createPersonElement(person) {
        var element = document.createElement('div');
        element.className = 'family-tree-person ' + person.gender.toLowerCase();
        
        // æ·»åŠ å¤´åƒæˆ–å ä½ç¬¦
        var avatarElement;
        if (person.imageUrl) {
            avatarElement = document.createElement('img');
            avatarElement.className = 'family-tree-avatar ' + person.gender.toLowerCase();
            avatarElement.src = person.imageUrl;
            avatarElement.alt = person.name;
            avatarElement.onerror = function() {
                // å¦‚æœå›¾ç‰‡åŠ è½½å¤±è´¥ï¼Œæ˜¾ç¤ºå ä½ç¬¦
                this.style.display = 'none';
                var placeholder = createAvatarPlaceholder(person);
                this.parentNode.insertBefore(placeholder, this);
            };
        } else {
            avatarElement = createAvatarPlaceholder(person);
        }
        
        element.appendChild(avatarElement);
        
        // æ·»åŠ æˆå‘˜ä¿¡æ¯
        var nameElement = document.createElement('div');
        nameElement.className = 'name';
        nameElement.textContent = person.name;
        element.appendChild(nameElement);
        
        var detailsElement = document.createElement('div');
        detailsElement.className = 'details';
        
        // æ·»åŠ ä¸–ä»£ä¿¡æ¯
        if (person.generation) {
            detailsElement.textContent += 'ç¬¬' + person.generation + 'ä»£ ';
