@model FamilyTreeSystem.Models.Clan

@{ ViewData["Title"] = "编辑族谱"; }

<h1 class="text-2xl font-bold text-amber-800 mb-6">编辑族谱</h1>

<hr class="border-amber-200 mb-6" />
<div class="max-w-4xl mx-auto">
    <form asp-action="Edit" class="bg-white/90 backdrop-blur-sm rounded-xl shadow-xl p-6 border border-amber-100">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-6"></div>
        <input type="hidden" asp-for="Id" />
        
        <!-- 基本信息区域 -->
        <div class="mb-8">
            <h3 class="text-lg font-semibold text-amber-800 mb-4 border-b border-amber-200 pb-2">基本信息</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Name" class="block text-amber-700 font-medium mb-2">族谱名称<span class="text-red-500">*</span></label>
                    <input asp-for="Name" class="w-full px-4 py-2 border border-amber-200 rounded-lg focus:ring-amber-500 focus:border-amber-500 transition-colors duration-300" required />
                    <span asp-validation-for="Name" class="text-danger text-sm block mt-1"></span>
                </div>
                <div>
                    <label asp-for="ClanSurname" class="block text-amber-700 font-medium mb-2">姓氏<span class="text-red-500">*</span></label>
                    <input asp-for="ClanSurname" class="w-full px-4 py-2 border border-amber-200 rounded-lg focus:ring-amber-500 focus:border-amber-500 transition-colors duration-300" required />
                    <span asp-validation-for="ClanSurname" class="text-danger text-sm block mt-1"></span>
                </div>
            </div>
        </div>

        <!-- 族谱信息区域 -->
        <div class="mb-8">
            <h3 class="text-lg font-semibold text-amber-800 mb-4 border-b border-amber-200 pb-2">族谱信息</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="HallName" class="block text-amber-700 font-medium mb-2">堂号</label>
                    <input asp-for="HallName" class="w-full px-4 py-2 border border-amber-200 rounded-lg focus:ring-amber-500 focus:border-amber-500 transition-colors duration-300" />
                    <span asp-validation-for="HallName" class="text-danger text-sm block mt-1"></span>
                </div>
                <div>
                    <label asp-for="Region" class="block text-amber-700 font-medium mb-2">地区</label>
                    <input asp-for="Region" class="w-full px-4 py-2 border border-amber-200 rounded-lg focus:ring-amber-500 focus:border-amber-500 transition-colors duration-300" />
                    <span asp-validation-for="Region" class="text-danger text-sm block mt-1"></span>
                </div>
            </div>
        </div>

        <!-- 始祖信息区域 -->
        <div class="mb-8">
            <h3 class="text-lg font-semibold text-amber-800 mb-4 border-b border-amber-200 pb-2">始祖信息</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="AncestorName" class="block text-amber-700 font-medium mb-2">始祖姓名</label>
                    <input asp-for="AncestorName" class="w-full px-4 py-2 border border-amber-200 rounded-lg focus:ring-amber-500 focus:border-amber-500 transition-colors duration-300" />
                    <span asp-validation-for="AncestorName" class="text-danger text-sm block mt-1"></span>
                </div>
                <div>
                    <label asp-for="AncestorBirthDate" class="block text-amber-700 font-medium mb-2">始祖生辰</label>
                    <input asp-for="AncestorBirthDate" type="date" class="w-full px-4 py-2 border border-amber-200 rounded-lg focus:ring-amber-500 focus:border-amber-500 transition-colors duration-300" />
                    <span asp-validation-for="AncestorBirthDate" class="text-danger text-sm block mt-1"></span>
                </div>
            </div>
        </div>

        <!-- 地址信息区域 -->
        <div class="mb-8">
            <h3 class="text-lg font-semibold text-amber-800 mb-4 border-b border-amber-200 pb-2">地址信息</h3>
            <div>
                <label asp-for="OriginalAddress" class="block text-amber-700 font-medium mb-2">原籍地址</label>
                <input asp-for="OriginalAddress" class="w-full px-4 py-2 border border-amber-200 rounded-lg focus:ring-amber-500 focus:border-amber-500 transition-colors duration-300" />
                <span asp-validation-for="OriginalAddress" class="text-danger text-sm block mt-1"></span>
            </div>
        </div>

        <!-- 简介区域 -->
        <div class="mb-8">
            <h3 class="text-lg font-semibold text-amber-800 mb-4 border-b border-amber-200 pb-2">简介</h3>
            <div>
                <label asp-for="Description" class="block text-amber-700 font-medium mb-2">简介</label>
                <textarea asp-for="Description" class="w-full px-4 py-2 border border-amber-200 rounded-lg focus:ring-amber-500 focus:border-amber-500 transition-colors duration-300" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger text-sm block mt-1"></span>
            </div>
        </div>

        <div class="flex gap-4 justify-end mt-8 pt-4 border-t border-amber-100">
            <a asp-action="Index" class="px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition-colors shadow-md">取消</a>
            <input type="submit" value="保存" class="px-6 py-3 bg-amber-600 hover:bg-amber-700 text-white rounded-lg font-medium transition-colors shadow-lg" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
