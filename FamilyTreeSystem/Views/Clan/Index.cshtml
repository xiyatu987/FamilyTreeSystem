@model IEnumerable<FamilyTreeSystem.Models.Clan>

@{ ViewData["Title"] = "宗族列表"; }

<h1 class="text-2xl font-bold text-amber-800 mb-6">宗族列表</h1>

<p class="mb-6">
    <a asp-action="Create" class="px-4 py-2 bg-amber-600 text-white rounded-lg hover:bg-amber-700 transition-colors duration-300">添加新宗族</a>
</p>

<div class="bg-white/90 backdrop-blur-sm rounded-xl shadow-xl border border-amber-100 overflow-hidden">
    <table class="min-w-full divide-y divide-amber-200">
        <thead class="bg-amber-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-700 uppercase tracking-wider">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-700 uppercase tracking-wider">名称</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-700 uppercase tracking-wider">描述</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-700 uppercase tracking-wider">创建时间</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-700 uppercase tracking-wider">更新时间</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-700 uppercase tracking-wider">操作</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-amber-200">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-amber-800">@item.Id</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-amber-800">@item.Name</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-amber-800">@item.Description</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-amber-800">@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-amber-800">@item.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-800 mr-3">查看详情</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-amber-600 hover:text-amber-800 mr-3">编辑</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-800">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
