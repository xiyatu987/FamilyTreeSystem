@model FamilyTreeSystem.Models.ClanActivity

@{ ViewData["Title"] = "删除宗族活动"; }

<h1 class="text-2xl font-bold text-amber-800 mb-6">删除宗族活动</h1>

<div class="bg-amber-50 border-l-4 border-amber-400 p-4 mb-6 max-w-4xl mx-auto">
    <h3 class="text-xl font-semibold text-amber-800 mb-2">确定要删除活动"@Model.Title"吗？</h3>
    <p class="text-amber-700">此操作不可逆，删除后活动信息将无法恢复。</p>
</div>
<div class="bg-white/90 backdrop-blur-sm rounded-xl shadow-xl p-6 border border-amber-100 max-w-4xl mx-auto">
    <h4 class="text-xl font-semibold text-amber-700 mb-4">活动信息</h4>
    <hr class="border-amber-200 mb-6" />
    <dl class="grid grid-cols-1 sm:grid-cols-6 gap-x-6 gap-y-4">
        <dt class="sm:col-span-2 font-medium text-amber-700">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="sm:col-span-4 text-amber-800">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="sm:col-span-2 font-medium text-amber-700">
            @Html.DisplayNameFor(model => model.ActivityDate)
        </dt>
        <dd class="sm:col-span-4 text-amber-800">
            @Html.DisplayFor(model => model.ActivityDate)
        </dd>
        <dt class="sm:col-span-2 font-medium text-amber-700">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="sm:col-span-4 text-amber-800">
            @Html.DisplayFor(model => model.Location)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-6">
        <input type="hidden" asp-for="Id" />
        <div class="flex gap-4 justify-center">
            <input type="submit" value="删除" class="px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors duration-300 font-medium shadow-md" />
            <a asp-action="Index" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors duration-300 font-medium shadow-md">取消</a>
        </div>
    </form>
</div>
